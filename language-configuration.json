{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "folding": {
    "markers": {
      "start": "^\\s*<\\W*$",
      "end": "^\\s*>\\W*$"
    }
  },
  "wordPattern": "([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s\\、\\，。：；【】（）《》“”]+)",
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["《", "》"],
    ["【", "】"],
    ["<", ">"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["《", "》"],
    ["【", "】"],
    ["<", ">"],
    ["\"", "\""],
    ["'", "'"]
  ]
}
